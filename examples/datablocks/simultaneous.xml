<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment"
 version="1">

  <!--
	  shows extensive use of multiple datablocks + disabling a channel
  -->
  <procedure xsi:type="apex:trainingProcedureType">
    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>

      <order>sequential</order>
    </parameters>

    <trials>
      <trial id="trial1" >
        <answer>e</answer>
        <screen id="screen1" />
        <stimulus id="stimulus1" />
      </trial>
      <trial id="trial2" >
        <answer>t</answer>
        <screen id="screen1" />
        <stimulus id="stimulus2" />
      </trial>
      <trial id="trial3" >
        <answer>d</answer>
        <screen id="screen1" />
        <stimulus id="stimulus3" />
      </trial>
      <trial id="trial4" >
        <answer>vier</answer>
        <screen id="screen1" />
        <stimulus id="stimulus4" />
      </trial>
      <trial id="trial5" >
        <answer>vijf</answer>
        <screen id="screen1" />
        <stimulus id="stimulus5" />
      </trial>
      <trial id="trial6" >
        <answer>zes</answer>
        <screen id="screen1" />
        <stimulus id="stimulus6" />
      </trial>
      <trial id="trial7" >
        <answer>zeven</answer>
        <screen id="screen1" />
        <stimulus id="stimulus7" />
      </trial>
      <trial id="trial8" >
        <answer>acht</answer>
        <screen id="screen1" />
        <stimulus id="stimulus8" />
      </trial>
      <trial id="trial9" >
        <answer>negen</answer>
        <screen id="screen1" />
        <stimulus id="stimulus9" />
      </trial>
    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>

  <screens>
    <reinforcement>
      <progressbar>false</progressbar>
      <feedback>false</feedback>
    </reinforcement>
    <screen id="screen1" >


      <gridLayout height="5" width="4" id="answer_layout" x="1" y="2">
        <label x="1" y="2" id="l1">
          <text>once</text>
        </label>
        <button x="2" y="2" id="e">
          <text>eentwee</text>
        </button>
        <button x="3" y="2" id="t">
          <text>tweeeen</text>
        </button>
        <button x="4" y="2" id="d">
          <text>noiseeen</text>
        </button>
        <label x="1" y="3" id="l2">
          <text>twice</text>
        </label>
        <button x="2" y="3" id="vier">
          <text>EENTWEE</text>
        </button>
        <button x="3" y="3" id="vijf">
          <text>TWEEEEN</text>
        </button>
        <button x="4" y="3" id="zes">
          <text>NOISEEEN</text>
        </button>
        <label x="1" y="4" id="l3">
          <text>reference</text>
        </label>
        <button x="2" y="4" id="zeven">
          <text>een</text>
        </button>
        <button x="3" y="4" id="acht">
          <text>twee</text>
        </button>
        <button x="4" y="4" id="negen">
          <text>noise</text>
        </button>
      </gridLayout>

      <buttongroup id="buttongroup1">
        <button id="e"/>
        <button id="t"/>
        <button id="d"/>
        <button id="vier"/>
        <button id="vijf"/>
        <button id="zes"/>
        <button id="zeven"/>
        <button id="acht"/>
        <button id="negen"/>
      </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
  </screens>

  <datablocks>
    <uri_prefix>file:../stimuli</uri_prefix>
    <datablock id="rawdata1">
      <device>soundcard1</device>
      <uri>wd1.wav</uri>
    </datablock>
    <datablock id="rawdata2">
      <device>soundcard1</device>
      <uri>wd2.wav</uri>
    </datablock>
    <datablock id="noisedata">
      <device>soundcard1</device>
      <uri>wivineruis.wav</uri>
    </datablock>
  </datablocks>

  <devices>
    <device id="soundcard1" xsi:type="apex:wavDeviceType">
      <driver>portaudio</driver>
      <card>default</card>
      <channels>2</channels>
      <gain>0</gain>
      <samplerate>44100</samplerate>
    </device>
  </devices>

  <filters>
    <filter xsi:type="apex:dataloop" id="irritating">
      <device>soundcard1</device>
      <channels>1</channels>
      <continuous>false</continuous>
      <datablock>noisedata</datablock>
      <basegain>0</basegain>
      <gain>0.0</gain>
      <randomjump>false</randomjump>
    </filter>
    <filter xsi:type="apex:dataloop" id="noisegen">
      <device>soundcard1</device>
      <channels>1</channels>
      <continuous>true</continuous>
      <datablock>noisedata</datablock>
      <basegain>0</basegain>
      <gain>0.0</gain>
      <randomjump>true</randomjump>
    </filter>
  </filters>


  <stimuli>
    <fixed_parameters/>
    <stimulus id="stimulus1" >
      <description>blah</description>
      <datablocks>
        <sequential>
          <datablock id="rawdata1" />
          <datablock id="rawdata2" />
        </sequential>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
    <stimulus id="stimulus2" >
      <description>blah</description>
      <datablocks>
        <sequential>
            <datablock id="rawdata2" />
            <datablock id="rawdata1" />
          </sequential>
        </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
    <stimulus id="stimulus3" >
      <description>blah</description>
      <datablocks>
        <sequential>
          <datablock id="noisedata" />
          <datablock id="rawdata1" />
        </sequential>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
    <stimulus id="stimulus4" >
      <description>blah</description>
      <datablocks>
        <sequential>
        <simultaneous>
            <datablock id="rawdata1" />
            <datablock id="rawdata1" />
        </simultaneous>
          <simultaneous>
            <datablock id="rawdata2" />
            <datablock id="rawdata2" />
          </simultaneous>
        </sequential>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
    <stimulus id="stimulus5" >
      <description>blah</description>
      <datablocks>
        <sequential>
        <simultaneous>
            <datablock id="rawdata2" />
            <datablock id="rawdata2" />
        </simultaneous>
          <simultaneous>
            <datablock id="rawdata1" />
            <datablock id="rawdata1" />
          </simultaneous>
        </sequential>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
    <stimulus id="stimulus6" >
      <description>blah</description>
      <datablocks>
        <sequential>
          <simultaneous>
            <datablock id="noisedata" />
            <datablock id="noisedata" />
          </simultaneous>
          <simultaneous>
            <datablock id="rawdata1" />
            <datablock id="rawdata1" />
          </simultaneous>
        </sequential>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
    <stimulus id="stimulus7" >
      <description>blah</description>
      <datablocks>
          <datablock id="rawdata1" />
      </datablocks>
      <variableParameters>
        <parameter id="irri">-1</parameter>
        <parameter id="noise">-1</parameter>
        </variableParameters>
          <fixedParameters/>
        </stimulus>
    <stimulus id="stimulus8" >
      <description>blah</description>
      <datablocks>
        <datablock id="rawdata2" />
      </datablocks>
      <variableParameters>
        <parameter id="irri">-1</parameter>
        <parameter id="noise">-1</parameter>
        </variableParameters>
          <fixedParameters/>
        </stimulus>
    <stimulus id="stimulus9" >
      <description>blah</description>
      <datablocks>
        <datablock id="noisedata" />
      </datablocks>
      <variableParameters>
        <parameter id="irri">-1</parameter>
        <parameter id="noise">-1</parameter>
        </variableParameters>
          <fixedParameters/>
    </stimulus>
  </stimuli>


  <connections>
    <connection>
      <from>
        <id>noisegen</id>
        <channel>0</channel>
      </from>
      <to>
        <id>soundcard1</id>
        <channel id="noise">0</channel>
      </to>
    </connection>
      <connection>
        <from>
          <id>irritating</id>
          <channel id="irri">0</channel>
        </from>
        <to>
          <id>soundcard1</id>
          <channel>0</channel>
        </to>
      </connection>
      <connection>
      <from>
        <id>rawdata1</id>
        <channel id="rawdata1ch0">0</channel>
      </from>
      <to>
        <id>soundcard1</id>
        <channel id="soundcardch1">0</channel>
        </to>
      </connection>
      <connection>
        <from>
          <id>rawdata2</id>
          <channel id="rawdata2ch0">0</channel>
        </from>
        <to>
          <id>soundcard1</id>
          <channel>1</channel>
        </to>
      </connection>
      <connection>
        <from>
          <id>noisedata</id>
          <channel>0</channel>
        </from>
        <to>
          <id>soundcard1</id>
          <channel>1</channel>
      </to>
    </connection>
  </connections>


</apex:apex>

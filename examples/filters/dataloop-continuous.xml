<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.2/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.2/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.2/experiment"
 version="1">

<!--
  Shows use of dataloop generator
  wivineruis.wav should play in the background while playing the stimulus
-->
  <procedure xsi:type="apex:trainingProcedureType">
    <parameters>
      <presentations>100</presentations>
      <skip>0</skip>

      <order>sequential</order>
    </parameters>

    <trials>
      <trial id="trial1" >
        <answer>button1</answer>
        <screen id="screen1" />
        <stimulus id="stimulus1" />
      </trial>
      <trial id="trial2" >
        <answer>button2</answer>
        <screen id="screen1" />
        <stimulus id="stimulus2" />
      </trial>
    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>

  <screens>
    <screen id="screen1" >
      <gridLayout height="1" width="2">
        <button x="2" y="1" id="button1">
          <text>dataloop - 1</text>
        </button>
        <button x="1" y="1" id="button2">
          <text>dataloop - silence</text>
        </button>

      </gridLayout>
  <buttongroup id="buttongroup1">
        <button id="button1"/>
    <button id="button2"/>
  </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
  </screens>

 <datablocks>
   <uri_prefix>file:../stimuli</uri_prefix>
<datablock id="rawdata1">
      <device>soundcard1</device>
      <uri>wd1.wav</uri>
</datablock>
   <datablock id="rawdata2">
     <device>soundcard1</device>
     <uri>wd2.wav</uri>
   </datablock>
   <datablock id="noisedata">
     <device>soundcard1</device>
     <uri>wivineruis.wav</uri>
   </datablock>
   <datablock id="silence">
     <device>soundcard1</device>
     <uri>silence://10000</uri>
     <channels>1</channels>
   </datablock>


</datablocks>
  <devices>
    <device id="soundcard1" xsi:type="apex:wavDeviceType">
    <driver>portaudio</driver>
      <card>default</card>
      <channels>2</channels>
      <gain>0</gain>
      <samplerate>44100</samplerate>
</device>
 </devices>

  <filters>
    <filter xsi:type="apex:dataloop" id="noisegen">
      <device>soundcard1</device>
      <channels>1</channels>
      <continuous>true</continuous>
      <datablock>noisedata</datablock>
      <basegain>0</basegain>
      <gain>0</gain>
      <randomjump>false</randomjump>
    </filter>
    </filters>


  <stimuli>
    <fixed_parameters/>
    <stimulus id="stimulus1" >
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <sequential>
          <datablock id="rawdata1" />
          <datablock id="rawdata2" />
        </sequential>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
    <stimulus id="stimulus2" >
      <description>silence</description>
      <datablocks>
        <sequential>
          <datablock id="silence" />
          <datablock id="rawdata2" />
        </sequential>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
  </stimuli>


<connections>
    <connection>
      <from>
        <id>noisegen</id>
        <channel>0</channel>
      </from>
      <to>
        <id>soundcard1</id>
        <channel>0</channel>
      </to>

    </connection>
    <connection>
      <from>
        <id>_ALL_</id>
        <channel>0</channel>
      </from>
      <to>
        <id>soundcard1</id>
        <channel>0</channel>
      </to>
    </connection>
    <!--connection>
      <from>
        <id>_ALL_</id>
        <channel>1</channel>
      </from>
      <to>
        <id>soundcard1</id>
        <channel>1</channel>
      </to>
    </connection-->
</connections>


</apex:apex>



<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment"
 version="1">

  <!-- shows use of outputtest; run the experiment, press OK twice, and check the message window for the result.
       the test just compares if the recorded _Apexoutput.wav is the same as wd1.wav -->

  <procedure xsi:type="apex:trainingProcedureType">
    <parameters>
      <presentations>1</presentations>
      <skip>0</skip>
      <order>sequential</order>
    </parameters>

    <trials>
      <trial id="trial1" >
        <answer>correct</answer>
        <screen id="screen1" />
        <stimulus id="stimulus1" />
      </trial>
    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>

  <screens>
    <reinforcement>
      <progressbar>false</progressbar>
      <feedback>false</feedback>
    </reinforcement>
    <screen id="screen1" >
      <gridLayout height="2" width="2" id="answer_layout" x="1" y="2">
        <button x="1" y="1" id="correct">
          <text>OK</text>
        </button>

      </gridLayout>
      <buttongroup id="buttongroup1">
        <button id="correct"/>
      </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
  </screens>

  <datablocks>
    <uri_prefix>file:../stimuli</uri_prefix>
    <datablock id="wd1">
      <device>soundcard</device>
      <uri>wd1.wav</uri>
    </datablock>
  </datablocks>

  <devices>
    <master>soundcard</master>
    <device id="soundcard" xsi:type="apex:wavDeviceType">
      <driver>portaudio</driver>
      <card>default</card>
      <channels>2</channels>
      <gain>0</gain>
      <samplerate>44100</samplerate>
      <buffersize>1024</buffersize>
      <buffersize_apex>1</buffersize_apex>
    </device>
  </devices>

  <filters>

  </filters>

  <stimuli>
    <fixed_parameters/>
    <stimulus id="stimulus1" >
      <description>Eenvoudige teststimulus</description>
      <datablocks>
         <datablock id="wd1" />
       </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
  </stimuli>

  <connections>
  </connections>

  <general>
    <runoutputtest>true</runoutputtest>
  </general>

</apex:apex>

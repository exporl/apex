<?xml version='1.0' encoding='UTF-8'?>
<apex:apex version="1" xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.1.4/experiment https://exporl.med.kuleuven.be/apex/schemas/3.1.4/experiment.xsd" xmlns:apex="http://med.kuleuven.be/exporl/apex/3.1.4/experiment" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <!-- @doc
  @what: shows how to implement a horizontal slider on the screen
  @description: Slider is shown on the screen. Sliding the bar doens't change anything to the presented stimuli.
  @how: <slider>
  -->
  <procedure id="LoudnessRanking" xsi:type="apex:constantProcedure">
    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>sequential</order>
      <corrector xsi:type="apex:isequal"/>
    </parameters>
    <trials>
      <trial id="trial">
        <answer>slider_1</answer>
        <screen id="screen_1"/>
        <stimulus id="stimulus_1"/>
      </trial>
    </trials>
  </procedure>
  <screens>
    <screen id="screen_1">
      <hLayout width="2">
        <slider id="slider_1" x="1">
          <orientation>horizontal</orientation>
          <min>0</min>
          <max>50</max>
          <value>25</value>
          <tickinterval>10</tickinterval>
          <stepsize>1</stepsize>
          <pagesize>5</pagesize>
        </slider>
        <hLayout x="2" width="2">
          <vLayout x="1" height="5">
            <label id="label_1" y="1">
              <text>Heel Luid</text>
            </label>
            <label id="label_2" y="2">
              <text>Luid</text>
            </label>
            <label id="label_3" y="3">
              <text>Normaal</text>
            </label>
            <label id="label_4" y="4">
              <text>Stil</text>
            </label>
            <label id="label_5" y="5">
              <text>Bijna onhoorbaar</text>
            </label>
          </vLayout>
          <vLayout x="2" height="5">
            <button id="button_1" y="5">
              <text>Volgende</text>
            </button>
          </vLayout>
        </hLayout>
      </hLayout>
      <default_answer_element>button_1</default_answer_element>
    </screen>
  </screens>
  <datablocks>
    <prefix>../stimuli</prefix>
    <!-- Clarinet -->
    <datablock id="rawdata_1">
      <device>wavdevice</device>
      <file>sentence.wav</file>
    </datablock>
  </datablocks>
  <devices>
    <device id="wavdevice" xsi:type="apex:wavDeviceType">
      <driver>portaudio</driver>
      <card>interactive</card>
      <channels>1</channels>
      <gain>0</gain>
      <samplerate>44100</samplerate>
      <buffersize>512</buffersize>
    </device>
  </devices>
  <filters/>
  <stimuli>
    <fixed_parameters/>
    <!-- Clarinet -->
    <stimulus id="stimulus_1">
      <datablocks>
        <datablock id="rawdata_1"/>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
  </stimuli>
  <connections/>
</apex:apex>

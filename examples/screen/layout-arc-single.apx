<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/4.1.0/experiment https://exporl.med.kuleuven.be/apex/schemas/4.1.0/experiment.xsd" xmlns:apex="http://med.kuleuven.be/exporl/apex/4.1.0/experiment" version="1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <!-- @doc
  @what: example of simple archwise organisation of buttons
  @description: Buttons are placed archwise/in a semi-circle on the screen.
  @how: <arcLayout> upper, lower, left or right
  -->
  <procedure xsi:type="apex:constantProcedure">
    <parameters>
      <presentations>5</presentations>
      <skip>0</skip>
      <order>sequential</order>
      <corrector xsi:type="apex:isequal"/>
    </parameters>
    <trials>
      <trial id="trial0">
        <answer>button0</answer>
        <screen id="screen1"/>
        <stimulus id="standard1"/>
      </trial>
    </trials>
  </procedure>
  <screens>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback length="300">true</feedback>
      <showcurrent>true</showcurrent>
    </reinforcement>
    <screen id="screen1">
      <arcLayout x="1" y="1" width="9" type="upper">
        <button id="button-90" x="1" y="1">
          <text>-90</text>
        </button>
        <button id="button-45" x="2" y="1">
          <text>-45</text>
        </button>
        <button id="button-30" x="3" y="1">
          <text>-30</text>
        </button>
        <button id="button-15" x="4" y="1">
          <text>-15</text>
        </button>
        <button id="button0" x="5" y="1">
          <text>0</text>
        </button>
        <button id="button15" x="6" y="1">
          <text>15</text>
        </button>
        <button id="button30" x="7" y="1">
          <text>30</text>
        </button>
        <button id="button45" x="8" y="1">
          <text>45</text>
        </button>
        <button id="button90" x="9" y="1">
          <text>90</text>
        </button>
      </arcLayout>
      <buttongroup id="buttongroup90">
        <button id="button-90"/>
        <button id="button-45"/>
        <button id="button-30"/>
        <button id="button-15"/>
        <button id="button0"/>
        <button id="button15"/>
        <button id="button30"/>
        <button id="button45"/>
        <button id="button90"/>
      </buttongroup>
      <default_answer_element>buttongroup90</default_answer_element>
    </screen>
  </screens>
  <datablocks>
    <prefix>../stimuli</prefix>
    <datablock id="noisedata">
      <device>wavdevice</device>
      <file>ruisje.wav</file>
    </datablock>
  </datablocks>
  <devices>
    <device id="wavdevice" xsi:type="apex:wavDeviceType">
      <driver>portaudio</driver>
      <card>interactive</card>
      <channels>2</channels>
      <gain>0</gain>
      <samplerate>44100</samplerate>
      <buffersize>512</buffersize>
    </device>
  </devices>
  <filters/>
  <stimuli>
    <stimulus id="standard1">
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="noisedata"/>
      </datablocks>
      <variableParameters/>
    </stimulus>
  </stimuli>
  <connections/>
</apex:apex>

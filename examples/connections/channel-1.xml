<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment"
 version="1">

<!--
  Test the use of channel -1: if something is connected to channel -1 of the output device, it should be ignored
  
  result of this experiment: no output when button wrong is clicked
  also noisegen2 should not be heard
-->
  <procedure xsi:type="apex:trainingProcedureType">
    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
 
      <order>sequential</order>
    </parameters>
    
    <trials>
      <trial id="trial1" >
        <answer>correct</answer>
        <screen id="screen1" />
        <stimulus id="stimulus1" />
      </trial>
      <trial id="trial2" >
        <answer>wrong</answer>
        <screen id="screen1" />
        <stimulus id="stimulus2" />
      </trial>
    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>
  
  <screens>
    <reinforcement>
      <progressbar>false</progressbar>
      <feedback>false</feedback>
    </reinforcement>
    <screen id="screen1" >


        <gridLayout height="2" width="2" id="answer_layout" x="1" y="2">
          <button x="1" y="1" id="correct">
            <text>Correct</text>
          </button>
          <button x="2" y="1" id="wrong">
            <text>Wrong</text>
          </button>
          
        </gridLayout>

	<buttongroup id="buttongroup1">
      	<button id="correct"/>
	  <button id="wrong"/>
	</buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>    
  </screens>
  
 <datablocks>
   <uri_prefix>file:../stimuli</uri_prefix>
<datablock id="rawdata1">
      <device>soundcard1</device>
      <uri>wd1.wav</uri>
</datablock>
   <datablock id="rawdata2">
     <device>soundcard1</device>
     <uri>wd2.wav</uri>
   </datablock>
   <datablock id="noisedata">
     <device>soundcard1</device>
     <uri>wivineruis.wav</uri>
   </datablock>

   <datablock id="silence">
     <device>soundcard1</device>
     <uri>silence://999</uri>
     <channels>1</channels>
   </datablock>
</datablocks> 

<devices>
  <device id="soundcard1" xsi:type="apex:wavDeviceType">
 	  <driver>portaudio</driver>
    <card>default</card>
    <channels>2</channels>
    <gain>0</gain>
    <samplerate>44100</samplerate>
  </device>
</devices>

  <filters>
    <filter xsi:type="apex:dataloop" id="noisegen1">
      <device>soundcard1</device>
      <channels>1</channels>
      <continuous>false</continuous>
      <datablock>noisedata</datablock>
      <basegain>-16</basegain>
      <gain>0</gain>
      <randomjump>true</randomjump>
    </filter>
    
    <filter xsi:type="apex:dataloop" id="noisegen2">
      <device>soundcard1</device>
      <channels>1</channels>
      <continuous>false</continuous>
      <datablock>noisedata</datablock>
      <basegain>-16</basegain>
      <gain>0</gain>
      <randomjump>true</randomjump>
    </filter>

    <filter xsi:type="apex:amplifier" id="amplifier" >
      <device>soundcard1</device>
      <channels>1</channels>
      <basegain>-18.3818</basegain>
      <gain id="gain">0</gain>
    </filter>
  </filters>

 
  <stimuli>
    <fixed_parameters/>
    <stimulus id="stimulus1" >
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <sequential>
          <datablock id="rawdata1" />
          <datablock id="rawdata2" />
        </sequential>
      </datablocks>
      <variableParameters>
        <parameter id="noisegenchannel">0</parameter>
        
      </variableParameters>
      <fixedParameters/>
    </stimulus>
    <stimulus id="stimulus2" >
      <description>silence</description>
      <datablocks>
        <sequential>
          <datablock id="silence" />
          <datablock id="rawdata2" />
        </sequential>
      </datablocks>
      <variableParameters>
        <parameter id="noisegenchannel">-1</parameter>
      </variableParameters>
      <fixedParameters/>
    </stimulus>
  </stimuli>


  <connections>
    <connection>
      <from>
        <id>_ALL_</id>
        <channel>0</channel>
      </from>
      <to>
        <id>amplifier</id>
        <channel>0</channel>
      </to>
    </connection>
    <connection>
      <from>
        <id>amplifier</id>
        <channel>0</channel>
      </from>
      <to>
        <id>soundcard1</id>
        <channel>0</channel>
      </to>
    </connection>
    <connection>
      <from>
        <id>noisegen1</id>
        <channel>0</channel>
      </from>
      <to>
        <id>soundcard1</id>
        <channel id="noisegenchannel">0</channel>
      </to>
    </connection>
    
    <connection>
        <from>
      <id>noisegen2</id>
      <channel>0</channel>
    </from>
    <to>
      <id>soundcard1</id>
      <channel>-1</channel>
    </to>
    </connection>
    
  </connections>
	
    
</apex:apex>



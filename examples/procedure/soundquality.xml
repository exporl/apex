<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment"
 version="1">
  
  


    
   <procedure xsi:type="apex:constantProcedureType">
    <parameters>
      <presentations>1</presentations>
      <skip>0</skip>
      <order>random</order>
      <defaultstandard>standard</defaultstandard>
      <choices select="2">2</choices>
      <pause_between_stimuli>500</pause_between_stimuli>
    </parameters>
    
    <trials>
      <trial id="trial1" >
        <screen id="screen" />
        <stimulus id="stim1" />
      </trial>
      <trial id="trial2" >
        <screen id="screen" />
        <stimulus id="stim2" />
      </trial>
      
    </trials>
   </procedure>
  
  <corrector xsi:type="apex:isequal"/>
    <!-- is not used -->
  
  
  <screens>
    <general>
      <repeatbutton>true</repeatbutton>
    </general>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback>false</feedback>
    </reinforcement>
    <screen id="screen" >

      <gridLayout height="3" width="1" id="main_layout">
        <gridLayout width="4" height="1" row="1" col="1">
          <label id="l1" row="1" col="1">
            <text>bad</text>
          </label>
          <label id="l2" row="1" col="2">
            <text>avg</text>
          </label>
          <label id="l3" row="1" col="3">
            <text>good</text>
          </label>
        </gridLayout>
        
        <slider id="slider" row="2" col="1">
          <orientation>horizontal</orientation>
          <min>1</min>
          <max>10</max>
        </slider>
        
        <gridLayout width="2" height="1" row="3" col="1">
          <label id="info" row="1" col="1">
            <text>click if ok</text>
          </label>
          <button id="ok" row="1" col="2">
            <text>OK</text>
          </button>
        </gridLayout>
        
      </gridLayout>
      <buttongroup id="buttongroup">
        <button id="ok"/>
      </buttongroup>
      
      <default_answer_element>buttongroup</default_answer_element>
    </screen>
  </screens>
  
 <datablocks>
   <uri_prefix>../stimuli</uri_prefix>
   <datablock id="dbstandard" >
      <device>soundcard</device>
      <uri>wd1.wav</uri>
   </datablock>
   
   <datablock id="db1" >
     <device>soundcard</device>
     <uri>wd2.wav</uri>
   </datablock>
   
   <datablock id="db2" >
     <device>soundcard</device>
     <uri>wd3.wav</uri>
   </datablock>
   
 </datablocks>
  
  <devices>
   <device id="soundcard" xsi:type="apex:wavDeviceType">
         <driver>portaudio</driver>
    		<card>default</card>
        <channels>2</channels>
        <gain>0</gain>
        <samplerate>44100</samplerate>
   </device>
 </devices>
  
  
  
  <filters>
  </filters>
  
  <stimuli>
    
    <stimulus id="standard" >
      <datablocks>
        <datablock id="dbstandard" />
      </datablocks>
    </stimulus> 
    
    <stimulus id="stim1" >
      <datablocks>
        <datablock id="db1" />
      </datablocks>
    </stimulus> 
    
    <stimulus id="stim2" >
      <datablocks>
        <datablock id="db2" />
      </datablocks>
    </stimulus> 
    
    
    </stimuli>
  
  <connections/>
  
  
  
  
  
  
  
  
</apex:apex>

<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment"
 version="1">
  
  

  <!-- 
  Regression test for uniquestandard:
  Each trial, the 3 standards should be used
    -->
    
   <procedure xsi:type="apex:constantProcedureType">
    <parameters>
      <presentations>10</presentations>
      <skip>0</skip>
      <order>sequential</order>
      <uniquestandard>true</uniquestandard>
      <choices select="1,2,3,4">4</choices>

    </parameters>
    
    <trials>
      <trial id="trial1" >
        <screen id="screen1" />
        <stimulus id="stimulus1" />

        <standard id="standard1"/>
        <standard id="standard2"/>
        <standard id="standard3"/>
      </trial>
      
    </trials>
   </procedure>
  
  <corrector xsi:type="apex:alternatives">
    <answers>
        <answer number="1" value="button1"/>
        <answer number="2" value="button2"/>
        <answer number="3" value="button3"/>
      <answer number="4" value="button4"/>
     </answers>
  </corrector>
  
  <screens>
    <reinforcement>
      <progressbar>true</progressbar>
      <feedback length="300">true</feedback>
    </reinforcement>
    <screen id="screen1" >

      <gridLayout height="1" width="4" id="main_layout">

        <button x="1" y="1" id="button1" >
          <text>1</text>
        </button>
        <button x="2" y="1" id="button2" >
          <text>2</text>
        </button>
        <button x="3" y="1" id="button3" >
          <text>3</text>
        </button>
        <button x="4" y="1" id="button4" >
          <text>4</text>
        </button>
        
      </gridLayout>
      <buttongroup id="buttongroup1">
        <button id="button1"/>
        <button id="button2"/>
        <button id="button3"/>
        <button id="button4"/>
      </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
  </screens>
  
 <datablocks>
   <uri_prefix>../stimuli</uri_prefix>
   <datablock id="rawdata1" >
      <device>wavdevice</device>
      <uri>wd1.wav</uri>
   </datablock>
   
   <datablock id="noisedata" >
     <device>wavdevice</device>
     <uri>ruisje.wav</uri>
   </datablock>
   
 </datablocks><devices>
   <device id="wavdevice" xsi:type="apex:wavDeviceType">
            <driver>portaudio</driver>
		<card>default</card>
        <channels>2</channels>
        <gain>0</gain>
        <samplerate>44100</samplerate>
        <buffersize>4096</buffersize>
   </device>
 </devices>
  
  
  
  <filters>
    
  </filters><stimuli>
    
    <stimulus id="standard1" >
      <datablocks>
        <datablock id="noisedata" />
      </datablocks>
    </stimulus> 
    
    <stimulus id="standard2" >
      <datablocks>
        <datablock id="noisedata" />
      </datablocks>
    </stimulus> 
    <stimulus id="standard3" >
      <datablocks>
        <datablock id="noisedata" />
      </datablocks>
    </stimulus> 
    
    <stimulus id="stimulus1" >
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <datablock id="rawdata1" />
      </datablocks>
    </stimulus>
    
    </stimuli>
  
  <connections/>
  
  
  
  
  
  
  
  
</apex:apex>

<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment"
 version="1">
	
	<!--
	Stop after a specified number of reversals
	
	-->
	
	<procedure xsi:type="apex:adaptiveProcedureType">
		
		<parameters>
			<presentations>10</presentations>
			<skip>0</skip>
			<order>sequential</order>
			<nUp>1</nUp>
			<nDown>1</nDown>
			<adapt_parameter>gainparam</adapt_parameter> 
			<start_value>-50</start_value>
			<stop_after_type>reversals</stop_after_type>
			<stop_after>3</stop_after>
			<min_value>-100</min_value>
			<max_value>0</max_value>
			<larger_is_easier>true</larger_is_easier>
			<stepsizes>
				<change_after>reversals</change_after>
				<stepsize begin="0" size="2"/>
				<stepsize begin="2" size="1"/>
			</stepsizes>
		</parameters>
		<trials>
			<trial id="trial0">
				<answer>correct</answer>
				<screen id="screen1" />
				<stimulus id="stimulus0" />
			</trial>
		</trials>
		
	</procedure>	
	
	
	<corrector xsi:type="apex:isequal"></corrector>
	
	
	<screens>
		<reinforcement>
			<progressbar>true</progressbar>
			<feedback length="300">true</feedback>
		</reinforcement>
		
		<screen id="screen1" >
			<gridLayout height="2" width="2" id="main_layout">
				<label id="l1" row="1" col="1">
					<text>parameter</text>
				</label>
				<parameterlabel id="pl" row="1" col="2">
					<parameter>gainparam</parameter>
				</parameterlabel>
				
				
				<button id="correct" row="2" col="1">
					<text>correct</text>
				</button>
				<button id="false" row="2" col="2">
					<text>false</text>
				</button>
				
			</gridLayout>
			<buttongroup id="buttongroup">
				<button id="correct"/>
				<button id="false"/>
			</buttongroup>
			
			<default_answer_element>buttongroup</default_answer_element>
		</screen>
	</screens>
	
	
	<datablocks>
		<uri_prefix>file:../stimuli</uri_prefix>
		<datablock id="datablock0">
			<device>dev</device>
			<uri>wd1.wav</uri>
		</datablock>
		
	</datablocks>
	
	<devices>
		<device id="dev" xsi:type="apex:wavDeviceType">
			<driver>portaudio</driver>
			<card>default</card>
			<channels>2</channels>
			<gain>0</gain>
			<samplerate>44100</samplerate>
		</device>
	</devices>
	
	<filters>
		
		<filter xsi:type="apex:generator" id="noisegen">
			<device>dev</device>
			<channels>1</channels>
			<continuous>false</continuous>
			<type>noise</type>
			<gain id="gainparam">-20.0</gain>
			<frequency>0</frequency>
			<phase>0</phase>
		</filter>
		
	</filters>
	
	<stimuli> 
		<fixed_parameters/>
		<stimulus id="stimulus0">
			<description>Stimulus 0</description>
			<datablocks>
				<datablock id="datablock0"/>
			</datablocks>
			<variableParameters/>
			<fixedParameters/>
		</stimulus>
	</stimuli>
	
	<connections>
		<connection>
			<from>
				<id>_ALL_</id>
				<channel>0</channel>
			</from>
			<to>
				<id>dev</id>
				<channel>0</channel>
			</to>
		</connection>
		<connection>
			<from>
				<id>noisegen</id>
				<channel>0</channel>
			</from>
			<to>
				<id>dev</id>
				<channel>1</channel>
			</to>
		</connection>
		
	</connections>
	
	
</apex:apex>
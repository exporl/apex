<?xml version='1.0' encoding='UTF-8'?>
<apex:apex xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://med.kuleuven.be/exporl/apex/3.0.3/experiment https://gilbert.med.kuleuven.be/apex/schemas/3.0.3/experiment.xsd"
 xmlns:apex="http://med.kuleuven.be/exporl/apex/3.0.3/experiment"
 version="1">

<!--
  Shows how to start continuous filters etc before the first trial is presented
-->
  <procedure xsi:type="apex:constantProcedureType">
    <parameters>
      <presentations>3</presentations>
      <skip>0</skip>
      <order>sequential</order>
      <time_before_first_trial>5</time_before_first_trial>
    </parameters>

    <trials>
      <trial id="trial1" >
        <answer>button1</answer>
        <screen id="screen1" />
        <stimulus id="stimulus1" />
      </trial>
    </trials>
  </procedure>

  <corrector xsi:type="apex:isequal"/>

  <screens>
    <screen id="screen1" >
      <gridLayout height="1" width="2">
        <button x="2" y="1" id="button1">
          <text>dataloop - 1</text>
        </button>

      </gridLayout>
  <buttongroup id="buttongroup1">
        <button id="button1"/>
  </buttongroup>
      <default_answer_element>buttongroup1</default_answer_element>
    </screen>
  </screens>

 <datablocks>
   <uri_prefix>file:../stimuli</uri_prefix>
<datablock id="rawdata1">
      <device>soundcard1</device>
      <uri>wd1.wav</uri>
</datablock>
   <datablock id="noisedata">
     <device>soundcard1</device>
     <uri>wivineruis.wav</uri>
   </datablock>

 </datablocks>
  <devices>
    <device id="soundcard1" xsi:type="apex:wavDeviceType">
    <driver>portaudio</driver>
      <card>default</card>
      <channels>2</channels>
      <gain>0</gain>
      <samplerate>44100</samplerate>
</device>
 </devices>

  <filters>
    <filter xsi:type="apex:dataloop" id="noisegen">
      <device>soundcard1</device>
      <channels>1</channels>
      <continuous>true</continuous>
      <datablock>noisedata</datablock>
      <basegain>0</basegain>
      <gain>0</gain>
      <randomjump>false</randomjump>
    </filter>
    </filters>


  <stimuli>
    <fixed_parameters/>
    <stimulus id="stimulus1" >
      <description>Eenvoudige teststimulus</description>
      <datablocks>
        <sequential>
          <datablock id="rawdata1" />
         </sequential>
      </datablocks>
      <variableParameters/>
      <fixedParameters/>
    </stimulus>
  </stimuli>


<connections>
    <connection>
      <from>
        <id>noisegen</id>
        <channel>0</channel>
      </from>
      <to>
        <id>soundcard1</id>
        <channel>0</channel>
      </to>

    </connection>
    <connection>
      <from>
        <id>_ALL_</id>
        <channel>0</channel>
      </from>
      <to>
        <id>soundcard1</id>
        <channel>0</channel>
      </to>
    </connection>
 </connections>


</apex:apex>


